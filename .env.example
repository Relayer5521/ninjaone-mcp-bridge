# =============================================================================
# NinjaOne MCP Bridge - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# NinjaOne API Configuration
# Get these from NinjaOne Admin -> Administration -> Apps -> API
NINJAONE_CLIENT_ID=your-client-id-here
NINJAONE_CLIENT_SECRET=your-client-secret-here
NINJAONE_REGION=US
# Options: US, EU, AU
# NINJAONE_API_URL=https://api.ninjarmm.com  # Optional override

# Server Configuration
PORT=8102
LOG_LEVEL=info
NODE_ENV=production

# Rate Limiting
RATE_LIMIT=60
