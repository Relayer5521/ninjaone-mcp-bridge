{
  "name": "ninjaone-mcp-bridge",
  "version": "1.0.0",
  "description": "Model Context Protocol bridge for NinjaOne RMM integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "docker:build": "docker build -f docker/Dockerfile -t ninjaone-mcp-bridge:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ninjaone-mcp-bridge:latest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ninjaone",
    "rmm",
    "msp",
    "claude"
  ],
  "author": "Canopy Technology",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "rate-limiter-flexible": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
